<% @entries.each do |e| %>
  <% if @myUserId != e.user.id %>
    <h2><%= e.user.name %></h2>
  <% end %>
<% end %>

<% if @messages.present? %>
  <% @messages.each do |m| %>
    <% @myUserId == m.user.id %>
    <p><%= m.user.name %></p>
      <p><%= m.message %></p>
  <% end %>
<% end %>

<%= form_for @message do |f| %>
  <%= f.text_field :message, class:"form-text-field" %>
    <%= f.hidden_field :room_id, value: @room.id %>
      <%= f.submit "投稿" %>
<% end %>